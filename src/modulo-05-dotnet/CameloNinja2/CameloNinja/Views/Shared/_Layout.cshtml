<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Estilos/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Estilos/style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <header id="nav-top">
        <div id="logo">
            <img src="~/Content/Imagens/logoCameloNinja.png" alt="logo" width="300px"/>
